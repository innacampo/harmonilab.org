{
  "name": "harmonilab-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:tailwind": "npx tailwindcss -i ./src/input.css -o ./dist/tailwind.css --minify",
    "build:site": "npm run build:tailwind && npx babel src --out-dir dist --extensions \".js,.jsx,.ts,.tsx,.html\" --copy-files",
    "start": "npx http-server . -p 8000"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "tailwindcss": "^3.5.0"
  }
}
